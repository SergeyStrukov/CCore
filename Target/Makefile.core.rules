# dep file

DEP_FILE = $(OBJ_PATH)/Makefile.dep

# rules

asm: $(ASM_LIST)

clean:
	$(RM) $(TARGET) $(OBJ_PATH)/*
	touch -m --date="1980-1-1" $(GEN_LIST) empty
	$(RM) empty

$(TARGET) : $(OBJ_LIST) $(ASM_OBJ_LIST)
	$(RM) $(TARGET)
	$(AR) r $(TARGET) $(OBJ_LIST) $(ASM_OBJ_LIST)

$(DEP_FILE) : $(DEP_LIST)
	@echo CAT ; cat $(DEP_LIST) > $(DEP_FILE)

%.gen.h : %.desc
	Regen $< $@
