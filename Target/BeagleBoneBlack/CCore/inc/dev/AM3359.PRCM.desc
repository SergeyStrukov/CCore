reg ClockControl : 32
 {
  Mode : .+2
   {
    Disable = 0
    Enable  = 2
   }
  
  * : .+14
  
  IdleStatus : .+2
   {
    Running    = 0
    Transition = 1
    Idle       = 2
    Disabled   = 3 
   }
 }
 
bar CM_PERBar : address
 {
  ClockControl = hidden
 
  Timer2 = 80h as ClockControl
  Timer4 = 88h as ClockControl
  
  I2C1 = 48h as ClockControl
  I2C2 = 44h as ClockControl
 }

//----------------------------------------------------------------------------------------

reg TimerClockSelect : 32
 {
  Source: .+2
   {
    TCLKIN    = 0
    CLK_M_OSC = 1
    CLK_32KHZ = 2
   }
 }
 
bar CM_DPLLBar : address
 {
  TimerClockSelect = hidden
 
  Timer2 =  8h as TimerClockSelect
  Timer4 = 10h as TimerClockSelect
 }
 
//----------------------------------------------------------------------------------------

reg MPUIdleStatus : 32
 {
  Locked : 0
  Bypass : 8
 }
 
reg MPUClockSelect : 32
 {
  Div : 0-6
  Mul : 8-18
  BypassSelect : 23
 }
 
reg MPUDivM2 : 32
 {
  M2         : 0-4
  M2Ack      : 5
  NoAutoGate : 8
  Running    : 9
 }
 
reg MPUClockMode : 32
 {
  En : 0-2
   {
    MNBypass = 4
    LPBypass = 5
    FRBypass = 6
    Lock     = 7
   }
   
  RampLevel : 3-4
   {
    No = 0
    Lo = 1
    Hi = 2
   }
   
  RampRate : 5-7
  
  DriftGuard   : 8
  RelockRamp   : 9
  LPMode       : 10
  REGM4X       : 11
  SSC          : 12
  SSCAck       : 13
  SSCLowSpread : 14
  SSCType      : 15 
 }   

bar CM_WKUPBar : address
 {
  ClockControl = hidden
 
  MPUIdleStatus  = 020h RO
  MPUClockSelect = 02Ch
  MPUDivM2       = 0A8h
  MPUClockMode   = 088h
  
  I2C0 = 0B8h as ClockControl 
 }
 
//----------------------------------------------------------------------------------------
 
 



  
   